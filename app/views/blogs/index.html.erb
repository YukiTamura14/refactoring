<h1>ブログ一覧</h1>
<p><%= notice %></p>
<h1>Blogs</h1>
<%= day_of_the_week_character_helper %>
<%= render 'latest_infomation', article_number: @blogs.count %>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
    <td><%= link_to "ブログを編集する", edit_blog_path(blog.id) %></td>
    <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete, data: { confirm: '本当に編集していいですか？' } %></td>
  </tr>
<% end %>
</table>

<%= link_to '新しいブログを投稿する', new_blog_path %>
